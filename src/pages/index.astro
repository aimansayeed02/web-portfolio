<style>

    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
    }


    body {
      position: relative;
        background-image: url('/images/background02.jpg');
        background-attachment: fixed;
        background-repeat: no-repeat;
        display: flex;
        justify-content: center;
        align-items: center;
        background-size: cover;

        }

    .foreground-container {
        width: 90vw;
        max-width: 1200px;
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;

    }
    .foreground-container img {
        width: 125%;
        height: auto;
        display: block;
        position: absolute;
        padding:40px;

    }

    .overlay-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 5px;
        padding: 20px;
        box-sizing: border-box;
        z-index: 1100;
        margin: 40px 190px;

    }

      {
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        background: rgba(0, 0, 0, 0.3);
        padding: 10px;
        height: 500px; }

    .left-content {

        width: 570px;
        display: flex;
        justify-content: center;
        align-items:center;
        align-items: flex-start;
        /* background: rgba(0, 0, 0, 0.3); */
        border-radius: 10px;
        text-align: left;
        height: 500px;

    }

    .text {
    flex: 1;
    color:black;
    height: 220px;
    letter-spacing: normal;
    line-height: 1.4;
    margin-top:30px;
    margin-left:90px;
    /* min-width: 80%; */
}

    .left-content img {
        max-width: 90%;
        height:550px;
        display: flex;
        justify-content:right;
        margin-top:0px;
        margin-right:-50px;
        margin-top: -20px;

    }

    .right-content {
        display: flex;
        justify-content: center;
        align-items: center;
        /* background: rgba(0, 0, 0, 0.3); */
        padding: 30px;
        border-radius: 10px;
        text-align: center; }


    .side-left {
    position: fixed;
    top: 0;
    left: 0;
    width: 250px;
    height: 100%;
    background: url('/images/borderleft.png');
    background-size: cover;
    z-index: 10;
}
.side-right {
    position: fixed;
    top: 0;
    right:0;
    width: 250px;
    height: 110%;
    background: url('/images/borderright.png');
    background-size: cover;
    z-index: 10;
}
#about{
    width: 200px;
    height: auto;
    cursor: pointer;
    align-items:center;
    margin-top:2px;
    margin-left:88px;
    transition: transform 0.4s ease;
}

.logo{
 text-decoration: none;
 color:#d83050;
}

.contact{
    display: flex;
    justify-content: right;
    align-items: flex-start;
    grid-column: span 2;
    transition: transform 0.4s ease;
}
.contact:hover{
    transform: scale(1.1);
}
#about:hover{
transform: scale(1.1);
}



</style>

