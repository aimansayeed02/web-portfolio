---
import Navbar from '../components/navbar.astro'
import '../styles/styles.css'
import Footer from '../components/footer.astro'

const { title } = Astro.props;

---
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Inktober2023</title>
<link rel="stylesheet" href="https://use.typekit.net/vkr0nvh.css">

    <style>

      .inkbox{
        display: flex;
        justify-content: center;
      }
      .text{
        font-size: 1rem;
        /* margin : 60px 30px; */
        padding-right:250px;
        padding-left:150px;

      }

  .img-container {
    position: relative;
    display: inline-block;

  }

  #myimage {
    display: block;
    max-height: 500px;
    width: 100%;
    border-radius: 3px;


  }

  .magnifier {
    position: absolute;
    border: 2px solid #000;
    border-radius: 50%;
    cursor: none;
    width: 190px;
    height: 190px;
    overflow: hidden;
    display: none;
    box-shadow: 0 0 8px rgba(0,0,0,0.3);
    z-index: 06;
  }

  .magnifier img {
    position: absolute;
    width: 600px; /* same as #myimage width */
    height: auto;
    user-select: none;
  }
</style>
<Navbar
  logoSrc="/images/inktoberlogo.png"
  alt="My Website Logo"
 />
</head>
<body>
  <div class="inkbox">
		<img src="/images/inktoberbase.png" height="90px";> </div>
<div class="info">
    <div class="text font1">
      <p>
        <h2>Inktober 2021</h2>
        <br>
For Inktober 2023, text etxt
      </p>
      </div>

<div class="img-container">
  <img id="myimage" src="/images/zine2021.png" alt="Zoom Image" />
  <div class="magnifier" id="magnifier">
    <img src="/images/zine2021.png" alt="Zoomed" />
  </div>
</div>

<script>
  const img = document.getElementById("myimage");
  const magnifier = document.getElementById("magnifier");
  const magnifierImg = magnifier.querySelector("img");
  const zoom = 2; // zoom factor
  const magnifierRadius = magnifier.offsetWidth / 2;

  img.addEventListener("mousemove", moveMagnifier);
  img.addEventListener("mouseenter", () => magnifier.style.display = "block");
  img.addEventListener("mouseleave", () => magnifier.style.display = "none");

  function moveMagnifier(e) {
    const rect = img.getBoundingClientRect();
    let x = e.clientX - rect.left;
    let y = e.clientY - rect.top;

    if (x < 0 || y < 0 || x > rect.width || y > rect.height) {
      magnifier.style.display = "none";
      return;
    }

    magnifier.style.display = "block";

    // Position magnifier centered on cursor
    let posX = x - magnifierRadius;
    let posY = y - magnifierRadius;

    magnifier.style.left = posX + "px";
    magnifier.style.top = posY + "px";

    // Move zoomed image inside magnifier (inverse movement)
    magnifierImg.style.left = -(x * zoom - magnifierRadius) + "px";
    magnifierImg.style.top = -(y * zoom - magnifierRadius) + "px";
    magnifierImg.style.width = img.width * zoom + "px";
  }
</script>



<Footer />
</body>
</html>
