    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
    }


    body {
      position: relative;
        background-image: url('background.jpg'); /* Background image */
        background-position: center;
        background-attachment: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;}


    .foreground-container {
        width: 90vw;
        max-width: 1200px;
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;

    }

    .foreground-container img {
        width: 110%;
        height: auto;
        display: block;
        padding:60px;
        position: absolute;
    }

    .overlay-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 5px;
        padding: 20px;
        box-sizing: border-box;
        z-index: 1000;
        margin: 40px 200px;

    }

      {
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        background: rgba(0, 0, 0, 0.3);
        padding: 10px;
        height: 500px; }

    .left-content {
        display: flex;
        justify-content: center;
        align-items: center;
        align-items: flex-end;
        /* background: rgba(0, 0, 0, 0.3); */
        padding: 30px;
        border-radius: 10px;
        text-align: left;
        height: 600px;
    }
    .text {
    flex: 1;
