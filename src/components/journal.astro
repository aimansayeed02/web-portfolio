---
const {
  src = "/public/journalimg.png",
  alt = "Image",
  text = "Your Text Here"
} = Astro.props;
---
<style>
  .container {
    position: relative;
    width: 100%;
    max-width: 200px;
  }

  img {
    width: 200px;
    height: auto;
    display: block;
  }
.text-on-image {
    position: absolute;
    bottom: 5px;
    left: 0px;
    color: rgb(0, 0, 0);
    padding: 70px ;
    font-size: 2 rem;
  }
</style>

<div class="container">
  <img src={src} alt={alt} />
  <div class="text-on-image">{text}</div>
</div>
