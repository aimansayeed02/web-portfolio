---
const {
  src = "/public/journalimg.png",
  alt = "Image",
  text = "Your Text Here"
} = Astro.props;
---
<style>
  .container {
    position: relative;
    width: 100%;
    max-width: 200px;

  }

  img {
    width: 200px;
    height: auto;
    display: block;
    transition: transform 0.4s ease;
  }

.text-on-image {
    position: absolute;
    bottom: 5px;
    left: 5px;
    color: rgb(0, 0, 0);
    padding: 80px ;
    font-size: 2 rem;
    align-items: center;
    justify-content: center;
    transition: transform 0.4s ease;

  }
  .container:hover{
    transform: scale(1.1);
    transition: transform 0.5s ease;

  }

</style>

<div class="container">
  <img src={src} alt={alt} />
  <div class="text-on-image">{text}</div>
</div>
